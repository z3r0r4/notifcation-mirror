<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="258dp">

        <Button
            android:id="@+id/btnMsgTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send TEST" />

        <Button
            android:id="@+id/btnNetTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Net TEST" />

        <Button
            android:id="@+id/btnReply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REPLY" />

        <Switch
            android:id="@+id/swListenerPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listener Service" />

        <Switch
            android:id="@+id/swMirrorState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send over Network" />

        <Button
            android:id="@+id/btnTestBinding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Binding" />

        <TextView
            android:id="@+id/tV_repliedtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Replied Text" />

        <TextView
            android:id="@+id/tV_infotext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Info Text " />
         </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>