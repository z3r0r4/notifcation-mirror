<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swSetListenerPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/listener_service"
            tools:ignore="UseSwitchCompatOrMaterialXml" />


        <Button
            android:id="@+id/btnMsgTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_test_notification" />

        <Button
            android:id="@+id/btnReply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reply_to_last_notification" />

        <Button
            android:id="@+id/btnAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_on_last_notification" />

        <Button
            android:id="@+id/btnDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dismiss_last_notification" />

        <TextView
            android:id="@+id/tvRepliedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/replied_text" />


        <!-- @deprecated -->

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>